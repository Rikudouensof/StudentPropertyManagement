@model StudentPropertyManagement.Models.Complaint

@{
  ViewData["Title"] = "Create Report";
  Layout = "~/Views/Shared/_DashbordLayout.cshtml";
}

<div class="row">
  <div class="col-lg-8 col-xlg-9 col-md-12">
    <div class="card">
      <div class="card-body">
        <form asp-action="Create">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
          </div>
          <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <input asp-for="Message" class="form-control" />
            <span asp-validation-for="Message" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="DatePosted" class="control-label"></label>
            <input asp-for="DatePosted" class="form-control" />
            <span asp-validation-for="DatePosted" class="text-danger"></span>
          </div>
          <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
          </div>
        </form>
      </div>
    </div>

    <div>
      <a asp-action="Index">Back to List</a>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
